#!/bin/bash

rev=$(tput rev)
bold=$(tput bold)
reset=$(tput sgr0)

# Print normal-intensity legend.
printf '    '
for i in {00..07}; do
  printf '%s' "  $i "
done
printf ' ┐\n'

# Print normal-intensity colors.
printf Norm
for i in {0..7}; do
  printf '%s' " $(tput setaf "$i")$rev    $reset"
done
printf ' │ Normal\n'

# Print normal-intensity bold colors.
printf '%s' "${bold}Bold$reset"
for i in {0..7}; do
  printf '%s' " $(tput setaf "$i")$bold$rev    $reset"
done
printf ' │ intensity\n                                             ┘\n'

# Print bright-intensity colors.
printf '                                             ┐\nNorm'
for i in {8..15}; do
  printf '%s' " $(tput setaf "$i")$rev    $reset"
done
printf ' │ Bright\n'

# Print bright-intensity bold colors
printf '%s' "${bold}Bold$reset"
for i in {8..15}; do
  printf '%s' " $(tput setaf "$i")$bold$rev    $reset"
done
printf ' │ intensity\n'

# Print bright-intensity legend.
printf '    '
for i in {08..15}; do
  printf '%s' "  $i "
done
printf ' ┘\n'
